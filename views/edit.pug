html
    head
        body
            h1 Update Information for #{user.name} 
            form(action="/update/"+user.uid, method="post", id='form')
                div
                    label(form='userID') User ID
                    input(name='userID', type='text' id='userID' value=user.userId)
                div
                    label(form='name') Name
                    input(name='name', type='text' id='name', value=user.name)
                div
                    label(form='age') Age
                    input(name='age', type='number' id='age', value=user.age)
                div
                    label(form='email') Email
                    input(name='email', type='email', id='email', value=user.email)
                div
                    input(type='submit', value='Save')